<h1>New game</h1>

<ul class="grid list-inline">
<% @grid.each do |char| %> 
    <li class='letter'><%= char %></span> 
<% end %>
</ul>

<form action="/games/score" method="POST">
    <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
    <%= hidden_field_tag 'grid', @grid.join %>
    <label for="word">What is the longest word you can find?</label>
    <input type="text" id="word" name="word">
    <input type="submit" value="Give it a try">
</form>

<p class="score">Your score: <%= @score %></p>
